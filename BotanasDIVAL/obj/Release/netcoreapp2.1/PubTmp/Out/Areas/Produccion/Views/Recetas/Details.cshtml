@model BotanasDIVAL.Models.Recetas

@{  
    ViewData["Title"] = "Recetas";
    ViewData["Message"] = "Una vista un poco más aislada, para observar con detalle únicamente la información de este registro.";
}

<div class="row">
    <!-- Page Header -->
    <div class="col-lg-12">
        <h1 class="page-header">@ViewData["Title"]/Vista individual</h1>
    </div>
    <!--End Page Header -->
</div>

<div class="row">
    <div class="col-lg-12">
        <div class="alert alert-info alert-dismissable">
            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
            <i class="fa fa-info"></i>&nbsp;&nbsp;@ViewData["Message"]
        </div>
    </div>
</div>
<div class="row">
    <div class="col-lg-3">
    </div>
    <div class="col-lg-6">
        <div class="panel panel-default">
            <div class="panel-body success">
                <a class="btn btn-success btn-outline" asp-action="Index"><i class=" fas fa-arrow-left"></i>&nbsp;Regresar a la tabla</a>
                <a class="btn btn-success btn-outline pull-right" asp-area="organizacion" asp-controller="ListasIngredientes" asp-action="Index" asp-route-isQuery="true" asp-route-id="@Model.IdReceta">Ir a la Lista de Ingredientes de esta Receta&nbsp;<i class=" fas fa-arrow-right"></i></a>
                <hr />
                <p>Datos de este registro:</p>
                <dl class="dl-horizontal">
                    <dt class="text-success">
                        Descripción:
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.Descripcion)<br>
                    </dd>
                    <dt class="text-success">
                        Categoría:
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.IdCategoriaNavigation.NombreCategoria)<br>
                    </dd>
                    <dt class="text-success">
                        Merma:
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.Merma)<br>
                    </dd>
                    <dt class="text-success">
                        Unidad de Medida:
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.IdUniMedNavigation.DescripcionUniMed)<br>
                    </dd>
                    <dt class="text-success">
                        Costo por Kilo:
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.CostoKilo)<br>
                    </dd>
                    <dt class="text-success">
                        Estatus:
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.StatusNavigation.DescripcionStatus)<br>
                    </dd>
                    <dt class="text-success">
                        @Html.DisplayNameFor(model => model.Observaciones)
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.Observaciones)<br>
                    </dd>
                </dl>
                <hr>
                <a class="btn btn-success btn-lg pull-right" asp-action="Edit" asp-route-id="@Model.IdReceta">Editar</a>
            </div>
        </div>
    </div>
    <div class="col-lg-3">
    </div>
</div>
