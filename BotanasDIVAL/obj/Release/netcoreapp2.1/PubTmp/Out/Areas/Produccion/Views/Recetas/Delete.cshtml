@model BotanasDIVAL.Models.Recetas

@{
    ViewData["Title"] = "Recetas";
    ViewData["Message"] = "¿Estás seguro que quieres eliminar esto? Estos cambios no se pueden deshacer.";
}

<div class="row">
    <!-- Page Header -->
    <div class="col-lg-12">
        <h1 class="page-header">@ViewData["Title"]/Eliminar un registro</h1>
    </div>
    <!--End Page Header -->
</div>

<div class="row">
    <div class="col-lg-12">
        <div class="alert alert-info alert-dismissable">
            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
            <i class="fa fa-info"></i>&nbsp;&nbsp;@ViewData["Message"]
        </div>
    </div>
</div>
<div class="row">
    <div class="col-lg-3">

    </div>
    <div class="col-lg-6">
        <div class="panel panel-default">
            <div class="panel-body">
                <a class="btn btn-success btn-outline" asp-action="Index"><i class=" fas fa-arrow-left"></i>&nbsp;Regresar a la tabla</a>
                <hr />
                <p>Datos de este registro:</p>
                <dl class="dl-horizontal">
                    <dt class="text-success">
                        Descripción:
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.Descripcion)<br>
                    </dd>
                    <dt class="text-success">
                        Categoría:
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.IdCategoriaNavigation.NombreCategoria)<br>
                    </dd>
                    <dt class="text-success">
                        Merma:
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.Merma)<br>
                    </dd>
                    <dt class="text-success">
                        Unidad de Medida:
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.IdUniMedNavigation.DescripcionUniMed)<br>
                    </dd>
                    <dt class="text-success">
                        Costo por Kilo:
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.CostoKilo)<br>
                    </dd>
                    <dt class="text-success">
                        Estatus:
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.StatusNavigation.DescripcionStatus)<br>
                    </dd>
                    <dt class="text-success">
                        @Html.DisplayNameFor(model => model.Observaciones)
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.Observaciones)<br>
                    </dd>
                </dl>
                <form asp-action="Delete" id="deleteForm">
                    <input type="hidden" asp-for="IdReceta" />
                    <input type="submit" value="Borrar" class="btn btn-success btn-lg pull-right" id="deleteBtn" />
                </form>
            </div>
        </div>
    </div>
    <div class="col-lg-3">
    </div>
</div>

@section Scripts {
    @if (ViewBag.ErrorMessage != null)
    {
        <script>
            swal({
                type: 'error',
                title: 'Oops...',
                html: '¡Necesitas eliminar las dependencias antes!' +
                    '<br/> <hr/> <br/> <a href="/Home/Help">¿Por qué me pasa esto?</a>'
            })
        </script>
    }
}

