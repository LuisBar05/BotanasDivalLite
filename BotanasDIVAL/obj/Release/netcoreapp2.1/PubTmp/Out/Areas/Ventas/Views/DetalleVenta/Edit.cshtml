@model BotanasDIVAL.Models.DetalleVenta

@{
    ViewData["Title"] = "Detalle de Venta";
    ViewData["Message"] = "Sustituye la información que necesites modificar. No te olvides de guardar los cambios.";
}

<div class="row">
    <!-- Page Header -->
    <div class="col-lg-12">
        <h1 class="page-header">@ViewData["Title"]/Editar un registro</h1>
    </div>
    <!--End Page Header -->
</div>

<div class="row">
    <div class="col-lg-12">
        <div class="alert alert-warning alert-dismissable">
            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
            <i class="fa fa-info"></i>&nbsp;&nbsp;@ViewData["Message"]
        </div>
    </div>
</div>

<div class="row">
    <div class="col-lg-3">
    </div>
    <div class="col-lg-6">
        <div class="panel panel-info">
            <div class="panel-heading">
                <a class="btn btn-info btn-outline" asp-action="Details" asp-route-id="@Model.IdDetVenta"><i class=" fas fa-arrow-left"></i>&nbsp;Regresar al Detalle de Venta</a>
            </div>
            <div class="panel-body">
                <form asp-action="Edit" id="confirmForm">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="IdDetVenta" />
                    <input type="hidden" asp-for="IdVenta" />
                    <div class="form-group">
                        <label asp-for="CodProducto" class="control-label">Código de Producto</label>
                        <select asp-for="CodProducto" class="form-control" asp-items="ViewBag.CodProducto"></select>
                        <span asp-validation-for="CodProducto" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Cantidad" class="control-label">Cantidad</label>
                        <input asp-for="Cantidad" class="form-control" />
                        <span asp-validation-for="Cantidad" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Status" class="control-label">Estatus</label>
                        <select asp-for="Status" class="form-control" asp-items="ViewBag.Status"></select>
                        <span asp-validation-for="Status" class="text-danger"></span>
                    </div>
                    <hr>
                    <div class="form-group">
                        <textarea asp-for="Observaciones" class="form-control" rows="2" placeholder="Observaciones (Opcional)"></textarea>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Guardar" class="btn btn-info btn-lg pull-right" id="confirmBtn"/>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <div class="col-lg-3">
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
