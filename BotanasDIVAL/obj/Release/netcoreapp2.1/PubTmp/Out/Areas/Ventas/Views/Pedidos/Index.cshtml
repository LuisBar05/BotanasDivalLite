@model IEnumerable<BotanasDIVAL.Models.Pedidos>


@{
    ViewData["Title"] = "Pedidos";
    ViewData["Message"] = "En esta tabla se lleva un registro de todos los pedidos por parte de los clientes. Puedes ordenar por columna, buscar, crear un registro nuevo, y también ver los detalles, editar o eliminar un registro existente.";
}

<div class="row">
    <!-- Page Header -->
    <div class="col-lg-12">
        <h1 class="page-header">Registros en la tabla @ViewData["Title"]</h1>
    </div>
    <!--End Page Header -->
</div>

<div class="row">
    <div class="col-lg-12">
        <div class="alert alert-danger alert-dismissable">
            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
            <i class="fa fa-info"></i>&nbsp;&nbsp;@ViewData["Message"]
        </div>
    </div>
</div>

<div class="row">
    <div class="col-lg-12">
        <!-- Advanced Tables -->
        <div class="panel panel-warning">
            <div class="panel-heading">
                <a class="btn btn-warning btn-outline" asp-action="Create"><i class="fas fa-plus-circle"></i>&nbsp;Agregar un nuevo registro de pedido</a>
            </div>
            <div class="panel-body">
                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover text-center" id="pedidosTable">
                        <thead>
                            <tr class="warning">
                                <th>Información del <br>Cliente</th>
                                <th>Total de<br>Pedido</th>
                                <th>Fecha de<br>Pedido</th>
                                <th>Fecha de<br>Entrega</th>
                                <th>Observaciones</th>
                                <th><i class="fas fa-bookmark warning"></i></th>
                                <th>Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <th>
                                        @Html.DisplayFor(modelItem => item.Cliente)
                                    </th>
                                    <th>
                                        @Html.DisplayFor(modelItem => item.TotalPedido)
                                    </th>
                                    <th>
                                        @Html.DisplayFor(modelItem => item.FechaPedido)
                                    </th>
                                    <th>
                                        @Html.DisplayFor(modelItem => item.FechaEntrega)
                                    </th>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Observaciones)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.StatusNavigation.DescripcionStatus)
                                    </td>
                                    <td>
                                        <a class="btn btn-sm btn-warning" asp-action="Details" asp-route-id="@item.IdPedido"><i class="fas fa-list-alt fa-fw"></i></a> |
                                        <a class="btn btn-sm btn-warning" asp-action="Edit" asp-route-id="@item.IdPedido"><i class="fas fa-edit fa-fw"></i></a> |
                                        <a class="btn btn-sm btn-warning" asp-action="Delete" asp-route-id="@item.IdPedido"><i class="fas fa-trash fa-fw"></i></a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

            </div>
        </div>
        <!--End Advanced Tables -->
    </div>
</div>

