@model BotanasDIVAL.Models.Compras

@{  
    ViewData["Title"] = "Compras";
    ViewData["Message"] = "Una vista un poco más aislada, para observar con detalle únicamente la información de este registro.";
}

<div class="row">
    <!-- Page Header -->
    <div class="col-lg-12">
        <h1 class="page-header">@ViewData["Title"]/Eliminar un registro</h1>
    </div>
    <!--End Page Header -->
</div>

<div class="row">
    <div class="col-lg-12">
        <div class="alert alert-info alert-dismissable">
            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
            <i class="fa fa-info"></i>&nbsp;&nbsp;@ViewData["Message"]
        </div>
    </div>
</div>
<div class="row">
    <div class="col-lg-3">
    </div>
    <div class="col-lg-6">
        <div class="panel panel-default">
            <div class="panel-body success">
                <a class="btn btn-success btn-outline" asp-action="Index"><i class=" fas fa-arrow-left"></i>Regresar a la tabla</a>
                <hr />
                <p>Datos de este registro:</p>
                <dl class="dl-horizontal">
                    <dt class="text-success">
                        Total de Compra:
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.TotalCompra)
                    </dd>
                    <dt class="text-success">
                        Fecha de Compra:
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.FechaCompra)
                    </dd>
                    <dt class="text-success">
                        Lugar de Compra:
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.LugarCompra)
                    </dd>
                    <dt class="text-success">
                        @Html.DisplayNameFor(model => model.Observaciones)
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.Observaciones)
                    </dd>
                    <dt class="text-success">
                        Estatus:
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.StatusNavigation.DescripcionStatus)
                    </dd>
                </dl>
                <hr>
                <a class="btn btn-success btn-lg pull-right" asp-action="Edit" asp-route-id="@Model.IdCompra">Editar</a>
            </div>
        </div>
    </div>
    <div class="col-lg-3">
    </div>
</div>

