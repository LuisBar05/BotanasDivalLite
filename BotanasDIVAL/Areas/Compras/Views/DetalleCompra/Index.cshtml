@model IEnumerable<BotanasDIVAL.Models.DetalleCompra>

@{
    ViewData["Title"] = "Detalle de Compra";
    ViewData["Message"] = "En esta tabla se lleva un registro del desglose individual correspondiente a cada una de las compras realizadas. Puedes crear un registro nuevo, y también ver los detalles, editar o eliminar un registro existente.";
}

<div class="row">
    <!-- Page Header -->
    <div class="col-lg-12">
        <h1 class="page-header">Registros del @ViewData["Title"]</h1>
    </div>
    <!--End Page Header -->
</div>

<div class="row">
    <div class="col-lg-12">
        <div class="alert alert-info alert-dismissable">
            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
            <i class="fa fa-info"></i>&nbsp;&nbsp;@ViewData["Message"]
        </div>
    </div>
</div>

<div class="row">
    <div class="col-lg-12">
        <!-- Advanced Tables -->
        <div class="panel panel-success">
            <div class="panel-heading">
                <a class="btn btn-success btn-outline" asp-action="Create"><i class="fas fa-plus-circle"></i>&nbsp;Agregar un nuevo registro de detalle de compra</a>
                <a class="btn btn-success btn-outline pull-right" asp-controller="Compras" asp-action="Index"><i class=" fas fa-arrow-left"></i>&nbsp;Regresar a Compras</a>
            </div>
            <div class="panel-body">
                <div class="well well-sm">
                    <!--Dentro de este panel pretendo que vaya info sobre el registro seleccionado desde Compras, solo el ID y el Total -->
                    <h3 class="text-center"><span class="text-success">ID de Compra:</span>  |  <span class="text-success">Total de Compra:</span></h3>
                </div>
                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover text-center" id="detCompraTable">
                        <thead>
                            <tr class="success">
                                <th>Ingrediente</th>
                                <th>Cantidad</th>
                                <th>Observaciones</th>
                                <th><i class="fas fa-bookmark success"></i></th>
                                <th>Acciones</th>
                            </tr>
                        </thead>    
                        <tbody>
                            @foreach (var item in Model) //where ID=IdCompra?
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.IdIngredienteNavigation.NombreIngrediente)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Cantidad)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Observaciones)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.StatusNavigation.DescripcionStatus)
                                    </td>
                                    <td>
                                        <a class="btn btn-sm btn-success" asp-action="Details" asp-route-id="@item.IdDetCompra"><i class="fas fa-list-alt fa-fw"></i></a> |
                                        <a class="btn btn-sm btn-success" asp-action="Edit" asp-route-id="@item.IdDetCompra"><i class="fas fa-edit fa-fw"></i></a> |
                                        <a class="btn btn-sm btn-success" asp-action="Delete" asp-route-id="@item.IdDetCompra"><i class="fas fa-trash fa-fw"></i></a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

            </div>
        </div>
        <!--End Advanced Tables -->
    </div>
</div>