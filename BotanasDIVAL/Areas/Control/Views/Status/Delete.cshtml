@model BotanasDIVAL.Models.Status

@{
    ViewData["Title"] = "Estatus de los Registros";
    ViewData["Message"] = "¿Estás seguro que quieres eliminar esto? Estos cambios no se pueden deshacer.";
    ViewData["Additional"] = "Antes de eliminar un estado, asegúrate que no exista ningún registro en otra tabla que tenga este como su estado, de lo contrario habrá problemas al removerlo. Procede con precaución.";
}

<div class="row">
    <!-- Page Header -->
    <div class="col-lg-12">
        <h1 class="page-header">@ViewData["Title"]/Eliminar un registro</h1>
    </div>
    <!--End Page Header -->
</div>

<div class="row">
    <div class="col-lg-12">
        <div class="alert alert-info alert-dismissable">
            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
            <i class="fa fa-info"></i>&nbsp;&nbsp;@ViewData["Message"]
        </div>
    </div>
</div>
<div class="row">
    <div class="col-lg-3">

    </div>
    <div class="col-lg-6">
        <div class="panel panel-default">
            <div class="panel-body">
                <a class="btn btn-default btn-outline" asp-action="Index"><i class=" fas fa-arrow-left"></i>&nbsp;Regresar a la tabla</a>
                <hr />
                <div class="alert alert-info alert-dismissable">
                    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                    <i class="fa fa-info"></i>&nbsp;&nbsp;@ViewData["Additional"]
                </div>
                <p>Datos de este registro:</p>
                <dl class="dl-horizontal">
                    <dt>
                        Letra de Estatus:
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.Status1)<br>
                    </dd>
                    <dt>
                        Descripción:
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.DescripcionStatus)<br>
                    </dd>
                    <dt>
                        @Html.DisplayNameFor(model => model.Observaciones)
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.Observaciones)<br>
                    </dd>
                </dl>
                <form asp-action="Delete" id="deleteForm">
                    <input type="hidden" asp-for="IdStatus"/>
                    <input type="submit" value="Borrar" class="btn btn-default btn-lg blue pull-right" id="deleteBtn"/>
                </form>
            </div>
        </div>
    </div>
    <div class="col-lg-3">
    </div>
</div>

<!-- scripts to use only on Delete views -->
<script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/sweetalert/1.1.3/sweetalert.min.js"></script>   <!-- SweetAlert core JS -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/sweetalert/1.1.3/sweetalert-dev.min.js"></script>
<link href="https://cdnjs.cloudflare.com/ajax/libs/sweetalert/1.1.3/sweetalert.css" rel="stylesheet" />
<script src="~/js/sweet-alert-functions.js" type="text/javascript"></script>
