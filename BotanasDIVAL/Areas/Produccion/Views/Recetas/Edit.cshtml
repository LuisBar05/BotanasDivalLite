@model BotanasDIVAL.Models.Recetas

@{
    ViewData["Title"] = "Recetas";
    ViewData["Message"] = "Sustituye la información que necesites modificar. No te olvides de guardar los cambios.";

}

<div class="row">
    <!-- Page Header -->
    <div class="col-lg-12">
        <h1 class="page-header">@ViewData["Title"]/Editar un registro</h1>
    </div>
    <!--End Page Header -->
</div>

<div class="row">
    <div class="col-lg-12">
        <div class="alert alert-info alert-dismissable">
            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
            <i class="fa fa-info"></i>&nbsp;&nbsp;@ViewData["Message"]
        </div>
    </div>
</div>

<div class="row">
    <div class="col-lg-3">
    </div>
    <div class="col-lg-6">
        <div class="panel panel-success">
            <div class="panel-heading">
                <a class="btn btn-success btn-outline" asp-action="Index"><i class=" fas fa-arrow-left"></i>&nbsp;Regresar a la tabla</a>
            </div>
            <div class="panel-body">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="IdReceta"/>
                    <div class="form-group">
                        <label asp-for="IdCategoria" class="control-label">Categoría</label>
                        <select asp-for="IdCategoria" class ="form-control" asp-items="ViewBag.IdCategoria"></select>
                        <span asp-validation-for="IdCategoria" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Descripcion" class="control-label">Descripción</label>
                        <input asp-for="Descripcion" class="form-control" />
                        <span asp-validation-for="Descripcion" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Merma" class="control-label">Merma</label>
                        <input asp-for="Merma" class="form-control" />
                        <span asp-validation-for="Merma" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="IdUniMed" class="control-label">Unidad de Medida</label>
                        <select asp-for="IdUniMed" class ="form-control" asp-items="ViewBag.IdUniMed"></select>
                    </div>
                    <div class="form-group">
                        <label asp-for="CostoKilo" class="control-label">Costo por Kilo</label>
                        <input asp-for="CostoKilo" class="form-control" />
                        <span asp-validation-for="CostoKilo" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Status" class="control-label">Estatus</label>
                        <select asp-for="Status" class="form-control" asp-items="ViewBag.Status"></select>
                        <span asp-validation-for="Status" class="text-danger"></span>
                    </div>
                    <hr>
                    <div class="form-group">
                        <textarea asp-for="Observaciones" class="form-control" rows="2" placeholder="Observaciones"></textarea>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Guardar" class="btn btn-success btn-lg pull-right" />
                    </div>
                </form>
            </div>
        </div>
    </div>
    <div class="col-lg-3">
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
