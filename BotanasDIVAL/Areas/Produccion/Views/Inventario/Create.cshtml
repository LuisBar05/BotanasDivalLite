@model BotanasDIVAL.Models.Inventario

@{
    ViewData["Title"] = "Inventario";
    ViewData["Message"] = "Para crear un nuevo registro en la tabla inventario, llena los campos de este formulario. Guarda los cambios cuando termines.";
}

<div class="row">
    <!-- Page Header -->
    <div class="col-lg-12">
        <h1 class="page-header">@ViewData["Title"]/Crear un nuevo registro</h1>
    </div>
    <!--End Page Header -->
</div>

<div class="row">
    <div class="col-lg-12">
        <div class="alert alert-danger alert-dismissable">
            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
            <i class="fa fa-info"></i>&nbsp;&nbsp;@ViewData["Message"]
        </div>
    </div>
</div>

<div class="row">
    <div class="col-lg-3">

    </div>
    <div class="col-lg-6">
        <div class="panel panel-default">
            <div class="panel-heading">
                <a class="btn btn-default btn-outline" asp-action="Index"><i class=" fas fa-arrow-left"></i>&nbsp;Regresar a la tabla</a>
            </div>
            <div class="panel-body">
                <form asp-action="Create" id="confirmForm">
                    <div class="form-group">
                        <label asp-for="FechaRegistro" class="control-label">Fecha de Registro</label>
                        <input asp-for="FechaRegistro" class="form-control" />
                        <span asp-validation-for="FechaRegistro" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="CodProducto" class="control-label">Código de Producto</label>
                        <select asp-for="CodProducto" class ="form-control" asp-items="ViewBag.CodProducto"></select>
                        <span asp-validation-for="CodProducto" class=text-danger></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Cantidad" class="control-label">Cantidad</label>
                        <input asp-for="Cantidad" class="form-control" />
                        <span asp-validation-for="Cantidad" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="FechaElaboracion" class="control-label">Fecha de Elaboración</label>
                        <input asp-for="FechaElaboracion" class="form-control" />
                        <span asp-validation-for="FechaElaboracion" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="FechaCaducidad" class="control-label">Fecha de Caducidad</label>
                        <input asp-for="FechaCaducidad" class="form-control" />
                        <span asp-validation-for="FechaCaducidad" class="text-danger"></span>
                    </div>
                    <hr>
                    <div class="form-group">
                        <textarea asp-for="Observaciones" class="form-control" rows="2" placeholder="Observaciones (Opcional)"></textarea>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Guardar" class="btn btn-default ice btn-lg pull-right" id="confirmBtn"/>
                    </div>
                </form>
            </div>
        </div>    
    </div>
    <div class="col-lg-3">
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
