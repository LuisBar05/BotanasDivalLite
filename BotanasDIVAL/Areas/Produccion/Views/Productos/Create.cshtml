@model BotanasDIVAL.Models.Productos

@{
    ViewData["Title"] = "Productos";
    ViewData["Message"] = "Para crear un nuevo registro en la tabla productos, llena los campos de este formulario. Guarda los cambios cuando termines.";
    ViewData["Additional"] = "Se generará automáticamente el Código de Producto correspondiente a la información de este nuevo registro una vez guardado, con la siguiente nomenclatura: '[(1 letra) Categoría] + [(2 letras) Receta] + [(número) Gramaje de la presentación]'";
}

<div class="row">
    <!-- Page Header -->
    <div class="col-lg-12">
        <h1 class="page-header">@ViewData["Title"]/Crear un nuevo registro</h1>
    </div>
    <!--End Page Header -->
</div>

<div class="row">
    <div class="col-lg-12">
        <div class="alert alert-warning alert-dismissable">
            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
            <i class="fa fa-info"></i>&nbsp;&nbsp;@ViewData["Message"]
        </div>
    </div>
</div>

<div class="row">
    <div class="col-lg-3">

    </div>
    <div class="col-lg-6">
        <div class="panel panel-default">
            <div class="panel-heading">
                <a class="btn btn-default btn-outline" asp-action="Index"><i class=" fas fa-arrow-left"></i>&nbsp;Regresar a la tabla</a>
            </div>
            <div class="panel-body">
                <div class="alert alert-warning alert-dismissable">
                    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                    <i class="fa fa-info"></i>&nbsp;&nbsp;@ViewData["Additional"]
                </div>
                <form asp-action="Create" id="confirmForm">
                    <div class="form-group">
                        <label asp-for="Descripcion" class="control-label">Descripción del Producto</label>
                        <input asp-for="Descripcion" class="form-control" />
                        <span asp-validation-for="Descripcion" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="IdReceta" class="control-label">Receta</label>
                        <select asp-for="IdReceta" class="form-control" asp-items="ViewBag.IdReceta"></select>
                        <span asp-validation-for="IdReceta" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="IdPresentacion" class="control-label">Presentación</label>
                        <select asp-for="IdPresentacion" class="form-control" asp-items="ViewBag.IdPresentacion"></select>
                    </div>
                    <div class="form-group">
                        <label asp-for="Precio" class="control-label">Precio de Venta</label>
                        <input asp-for="Precio" class="form-control" />
                        <span asp-validation-for="Precio" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="CostoUnit" class="control-label">Costo Unitario</label>
                        <input asp-for="CostoUnit" class="form-control" />
                        <span asp-validation-for="CostoUnit" class="text-danger"></span>
                    </div>
                    <hr>
                    <div class="form-group">
                        <textarea asp-for="Observaciones" class="form-control" rows="2" placeholder="Observaciones (Opcional)"></textarea>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Guardar" class="btn btn-default purple btn-lg pull-right" id="confirmBtn" />
                    </div>
                </form>
            </div>
        </div>    
    </div>
    <div class="col-lg-3">
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
