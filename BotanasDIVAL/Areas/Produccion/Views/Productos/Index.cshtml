@model IEnumerable<BotanasDIVAL.Models.Productos>

@{
    ViewData["Title"] = "Productos";
    ViewData["Message"] = "En esta tabla se encuentra la información acerca de cada uno de los productos dentro del catálogo de productos ofrecido por el negocio. Puedes ordenar por columna, buscar, crear un registro nuevo, y también ver los detalles, editar o eliminar un registro existente.";
}

<div class="row">
    <!-- Page Header -->
    <div class="col-lg-12">
        <h1 class="page-header">Registros en la tabla @ViewData["Title"]</h1>
    </div>
    <!--End Page Header -->
</div>

<div class="row">
    <div class="col-lg-12">
        <div class="alert alert-warning alert-dismissable">
            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
            <i class="fa fa-info"></i>&nbsp;&nbsp;@ViewData["Message"]
        </div>
    </div>
</div>

<div class="row">
    <div class="col-lg-12">
        <!-- Advanced Tables -->
        <div class="panel panel-default">
            <div class="panel-heading">
                <a class="btn btn-default btn-outline purple" asp-action="Create"><i class="fas fa-plus-circle"></i>&nbsp;Agregar un nuevo registro de producto</a>
            </div>
            <div class="panel-body">
                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover text-center" id="productosTable">
                        <thead>
                            <tr class="purple">
                                <th>Código de<br>Producto</th>
                                <th>Descripción</th>
                                <th>Precio de<br>Venta</th>
                                <th>Costo<br>Unitario</th>
                                <th>Observaciones</th>
                                <th><i class="fas fa-bookmark"></i></th>
                                <th>Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.CodProducto)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Descripcion)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Precio)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.CostoUnit)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Observaciones)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.StatusNavigation.DescripcionStatus)
                                    </td>
                                    <td>
                                        <a class="btn btn-sm btn-default purple" asp-action="Details" asp-route-id="@item.IdProducto"><i class="fas fa-list-alt fa-fw"></i></a> |
                                        <a class="btn btn-sm btn-default purple" asp-action="Edit" asp-route-id="@item.IdProducto"><i class="fas fa-edit fa-fw"></i></a> |
                                        <a class="btn btn-sm btn-default purple" asp-action="Delete" asp-route-id="@item.IdProducto"><i class="fas fa-trash fa-fw"></i></a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

            </div>
        </div>
        <!--End Advanced Tables -->
    </div>
</div>