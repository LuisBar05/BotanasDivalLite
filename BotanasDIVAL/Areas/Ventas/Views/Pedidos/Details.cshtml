@model BotanasDIVAL.Models.Pedidos

@{  
    ViewData["Title"] = "Pedidos";
    ViewData["Message"] = "Una vista un poco más aislada, para observar con detalle únicamente la información de este registro.";
}

<div class="row">
    <!-- Page Header -->
    <div class="col-lg-12">
        <h1 class="page-header">@ViewData["Title"]/Vista individual</h1>
    </div>
    <!--End Page Header -->
</div>

<div class="row">
    <div class="col-lg-12">
        <div class="alert alert-danger alert-dismissable">
            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
            <i class="fa fa-info"></i>&nbsp;&nbsp;@ViewData["Message"]
        </div>
    </div>
</div>
<div class="row">
    <div class="col-lg-3">
    </div>
    <div class="col-lg-6">
        <div class="panel panel-default">
            <div class="panel-body warning">
                <a class="btn btn-warning btn-outline" asp-action="Index"><i class=" fas fa-arrow-left"></i>&nbsp;Regresar a la tabla</a>
                <a class="btn btn-warning btn-outline pull-right" asp-controller="DetallePedido" asp-action="Index">Ir al Detalle de este Pedido&nbsp;<i class=" fas fa-arrow-right"></i></a>
                <hr />
                <p>Datos de este registro:</p>
                <dl class="dl-horizontal">
                    <dt class="text-warning">
                        Cliente:
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.Cliente)<br>
                    </dd>
                    <dt class="text-warning">
                        Total de Pedido:
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.TotalPedido)<br>
                    </dd>
                    <dt class="text-warning">
                        Fecha de Pedido:
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.FechaPedido)<br>
                    </dd>
                    <dt class="text-warning">
                        Fecha de Entrega:
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.FechaEntrega)<br>
                    </dd>
                    <dt class="text-warning">
                        @Html.DisplayNameFor(model => model.Observaciones)
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.Observaciones)<br>
                    </dd>
                    <dt class="text-warning">
                        Estatus:
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.StatusNavigation.DescripcionStatus)<br>
                    </dd>
                </dl>
                <hr>
                <a class="btn btn-warning btn-lg pull-right" asp-action="Edit" asp-route-id="@Model.IdPedido">Editar</a>
            </div>
        </div>
    </div>
    <div class="col-lg-3">
    </div>
</div>