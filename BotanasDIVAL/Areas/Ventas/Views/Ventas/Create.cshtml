@model BotanasDIVAL.Models.Ventas

@{
    ViewData["Title"] = "Ventas";
    ViewData["Message"] = "Para crear un nuevo registro en la tabla ventas, llena los campos de este formulario. Guarda los cambios cuando termines.";
}

<div class="row">
    <!-- Page Header -->
    <div class="col-lg-12">
        <h1 class="page-header">@ViewData["Title"]/Crear un nuevo registro</h1>
    </div>
    <!--End Page Header -->
</div>

<div class="row">
    <div class="col-lg-12">
        <div class="alert alert-warning alert-dismissable">
            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
            <i class="fa fa-info"></i>&nbsp;&nbsp;@ViewData["Message"]
        </div>
    </div>
</div>

<div class="row">
    <div class="col-lg-3">

    </div>
    <div class="col-lg-6">
        <div class="panel panel-info">
            <div class="panel-heading">
                <a class="btn btn-info btn-outline" asp-action="Index"><i class=" fas fa-arrow-left"></i>&nbsp;Regresar a la tabla</a>
            </div>
            <div class="panel-body">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="TotalVenta" class="control-label">Total de Venta</label>
                        <input asp-for="TotalVenta" class="form-control" />
                        <span asp-validation-for="TotalVenta" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="FechaVenta" class="control-label">Fecha de Venta</label>
                        <input asp-for="FechaVenta" class="form-control" />
                        <span asp-validation-for="FechaVenta" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Status" class="control-label">Estatus</label>
                        <select asp-for="Status" class="form-control" asp-items="ViewBag.Status"></select>
                    </div>
                    <hr>
                    <div class="form-group">
                        <textarea asp-for="Observaciones" class="form-control" rows="2" placeholder="Observaciones"></textarea>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Guardar" class="btn btn-info btn-lg pull-right" />
                    </div>
                </form>
            </div>
        </div>    
    </div>
    <div class="col-lg-3">
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
